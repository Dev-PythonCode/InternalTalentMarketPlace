{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TalentMarketplace;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "PythonAPI": {
    "BaseUrl": "http://localhost:5000"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "ResumeFolder": "Uploads/Resumes",
    "MaxFileSizeMB": 5,
    "AllowedExtensions": [ ".docx", ".pdf" ]
  },
  "VectorDB": {
    "IndexBatchSize": 50,
    "SearchResultLimit": 20
  }
}