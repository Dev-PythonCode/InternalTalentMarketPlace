@inject NavigationManager Navigation

<MudNavMenu>
    @if (CurrentRole == "HR" || CurrentRole == "Manager")
    {
        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard" Match="NavLinkMatch.All">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/post-requirement" Icon="@Icons.Material.Filled.PostAdd" Match="NavLinkMatch.Prefix">
            Post Requirement
        </MudNavLink>
        <MudNavLink Href="/application-review" Icon="@Icons.Material.Filled.Assignment" Match="NavLinkMatch.Prefix">
            Review Applications
        </MudNavLink>
        <MudNavLink Href="/search-results" Icon="@Icons.Material.Filled.Search" Match="NavLinkMatch.Prefix">
            AI Search Assistant
        </MudNavLink>
        <MudNavLink Href="/chatbot" Icon="@Icons.Material.Filled.Chat" Match="NavLinkMatch.Prefix">
            AI Chat
        </MudNavLink>
        
        
    }

    @* @if (CurrentRole == "Manager")
    {
        <MudNavLink Href="/post-requirement" Icon="@Icons.Material.Filled.PostAdd" Match="NavLinkMatch.Prefix">
            Post Requirement
        </MudNavLink>
        <MudNavLink Href="/application-review" Icon="@Icons.Material.Filled.Assignment" Match="NavLinkMatch.Prefix">
            Review Applications
        </MudNavLink>
    } *@

    @if (CurrentRole == "Employee")
    {
        <MudNavLink Href="/job-board" Icon="@Icons.Material.Filled.Work" Match="NavLinkMatch.Prefix">
            Current Job Openings
        </MudNavLink>
        <MudNavLink Href="/my-applications" Icon="@Icons.Material.Filled.Assignment">
            My Applications
        </MudNavLink>
        <MudNavLink Href="/my-profile" Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.Prefix">
            My Profile
        </MudNavLink>
        <MudNavLink Href="/career-roadmap" Icon="@Icons.Material.Filled.Timeline">
            Career Roadmap
        </MudNavLink>
    }

    @if (CurrentRole == "HR")
    {
        <MudNavLink Href="/admin" Icon="@Icons.Material.Filled.Settings" Match="NavLinkMatch.Prefix">
            Admin Panel
        </MudNavLink>
    }
</MudNavMenu>

@code {
    [Parameter]
    public string? CurrentRole { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine($"NavMenu initialized with role: {CurrentRole ?? "NULL"}");
    }
}