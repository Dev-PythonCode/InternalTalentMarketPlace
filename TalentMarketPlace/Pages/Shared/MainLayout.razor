@inherits LayoutComponentBase
@inject IAuthService AuthService
@inject NavigationManager Navigation

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="1" Dense="true" Style="background: linear-gradient(90deg, #275bb4 0%, #577ac6 100%);" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">Internal Talent Marketplace</MudText>
        <MudSpacer />
        @if (_currentEmployee != null)
        {
            <MudText Typo="Typo.body2" Class="mr-3">@_currentEmployee.FullName</MudText>
            <MudAvatar Color="Color.Tertiary" Size="Size.Small">@_currentEmployee.FullName[0]</MudAvatar>
        }
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="Logout" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" ClipMode="DrawerClipMode.Always" Variant="DrawerVariant.Persistent">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">
                Navigation Menu
            </MudText>
        </MudDrawerHeader>
        <NavMenu CurrentRole="@_currentRole" />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 mb-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<script src="js/career-roadmap.js"></script>

@code {
    private bool _drawerOpen = true;
    private Employee? _currentEmployee;
    private string? _currentRole;

    private MudTheme _theme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = "#0d3272",
                Secondary = "#0d3272",
                AppbarBackground = "#0d3272"
            }
        };

    protected override async Task OnInitializedAsync()
    {
        _currentEmployee = await AuthService.GetCurrentEmployeeAsync();
        _currentRole = await AuthService.GetCurrentRoleAsync();
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }
}